from sklearn.datasets import make_blobs
import matplotlib.pyplot as plt
import numpy as np

# Step 1: Generate clustered data
X, y = make_blobs(
    n_samples=400,
    n_features=2,
    centers=3,
    cluster_std=1.0,
    random_state=42
)

# Step 2: Create black-and-white visualization
plt.figure(figsize=(12, 8))

# Define B&W-friendly markers for each cluster
markers = {0: "o", 1: "s", 2: "^"}     # circle, square, triangle
sizes   = {0: 50, 1: 70, 2: 90}        # slight size variation for clarity
labels  = {0: "Cluster 0", 1: "Cluster 1", 2: "Cluster 2"}

for cls in np.unique(y):
    plt.scatter(
        X[y == cls, 0],
        X[y == cls, 1],
        marker=markers[cls],
        color="black",
        edgecolor="white",
        s=sizes[cls],
        alpha=0.85,
        label=labels[cls], zorder = 3
    )

# Labels and title
plt.title("Synthetic Clusters Generated by make_blobs")
plt.xlabel("Feature 1")
plt.ylabel("Feature 2")
plt.grid(True, zorder=0)

# Legend placed below the plot
plt.legend(
    loc="upper center",
    bbox_to_anchor=(0.5, -0.12),
    ncol=3,
    frameon=True,
    shadow=True
)

plt.tight_layout()

# Save figure as PNG (high resolution)
plt.savefig("make_blobs_example.png", dpi=300, bbox_inches="tight")

# Show plot
plt.show()
